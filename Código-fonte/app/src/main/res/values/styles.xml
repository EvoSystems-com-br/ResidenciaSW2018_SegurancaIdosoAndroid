<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryAccentColor</item>

        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/primaryHintTextColor</item>
        <item name="colorError">@color/primaryAccentColor</item>

        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="imageButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:background">@drawable/btn_selector</item>
    </style>
</resources>