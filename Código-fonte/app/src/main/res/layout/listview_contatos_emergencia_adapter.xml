<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorPrimaryTextFichaMedica"
            android:text="@string/listview_adapter_contato_emergencia_txt_nome"/>
        <TextView
            android:id="@+id/txtNomeContatoEmergencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryTextFichaMedica"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorPrimaryTextFichaMedica"
            android:text="@string/listview_adapter_contato_emergencia_txt_parentesco"/>
        <TextView
            android:id="@+id/txtParentescoContatoEmergencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryTextFichaMedica"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorPrimaryTextFichaMedica"
            android:text="@string/listview_adapter_contato_emergencia_txt_numero"/>
        <TextView
            android:id="@+id/txtNumeroContatoEmergencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryTextFichaMedica"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>