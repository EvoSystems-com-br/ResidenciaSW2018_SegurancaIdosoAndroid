<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="80dp">

    <ScrollView
        android:id="@+id/formRemedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/lbltitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:labelFor="@+id/layout_Nome"
                android:padding="8dp"
                android:text="@string/txtTitulo"
                android:textColor="@color/Preto"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Informações do Farmaceutico"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblFarmaceutico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/edtFarmaceutico"
                android:text="@string/txtNomeFarmaceutico"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/edtFarmaceutico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:autofillHints="@string/txtNomeFarmaceutico"/>

            <TextView
                android:id="@+id/lblInstituicao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/edtInstituicao"
                android:text="@string/txtInstituicao"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/edtInstituicao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:autofillHints="@string/txtInstituicao"/>

            <TextView
                android:id="@+id/lblEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/edtEndereco"
                android:text="@string/txtEndereco"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/edtEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="@string/txtEndereco"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lblRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/edtRP"
                android:text="@string/txtRp"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/edtRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:autofillHints="@string/txtRp"/>

            <TextView
                android:id="@+id/lblCPF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/edtCPF"
                android:text="@string/txtCpf"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/edtCPF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:autofillHints="@string/txtCpf"/>

            <TextView
                android:id="@+id/lblData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/edtData"
                android:text="@string/txtData"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/edtData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:autofillHints="@string/txtData"/>

            <TextView
                android:id="@+id/subTitulo2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Informações do Remédio"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lblNomeRemedio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/edtNomeRemedio"
                android:text="@string/txtNomeRemedio"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/edtNomeRemedio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:autofillHints="@string/txtNomeRemedio"/>

            <TextView
                android:id="@+id/lblConcentracao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/edtConcentracao"
                android:text="@string/txtConcentracao"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/edtConcentracao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:autofillHints="@string/txtConcentracao"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lblFormaFarmaceutica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/edtFormaFarmaceutica"
                android:text="@string/txtFormaFarmaceutica"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/edtFormaFarmaceutica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:autofillHints="@string/txtFormaFarmaceutica"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lblQtd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/edtQtd"
                android:text="@string/txtQuantidade"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/edtQtd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:autofillHints="@string/txtQuantidade"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblFrequencia"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:labelFor="@+id/txtFrequencia"
                    android:text="@string/form_lblFreq"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/txtFrequencia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:ems="10"
                    android:inputType="number"
                    android:autofillHints="@string/form_lblFreq"/>

                <Spinner
                    android:id="@+id/fSpinner"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="0.4"
                    android:prompt="@string/periodo" />

            </LinearLayout>

            <TextView
                android:id="@+id/lblOrientacoesExtras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:labelFor="@+id/txtOrientacaoExtra"
                android:text="Orientações Extras"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/txtOrientacaoExtra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textSize="18sp"
                android:autofillHints="@string/txtOrientacaoExtra"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_anchorGravity="bottom|center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formRemedio"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/btCancel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/form_btCancelar"
            android:textColor="@color/Azul"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btContinuar2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/btcontinua_modum" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>